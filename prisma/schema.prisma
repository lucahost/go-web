datasource db {
    provider = "sqlite"
    url      = "file:./db/go.db"
}

generator client {
    provider = "prisma-client-js"
}

// enum not supported (PlayerColor as string)

model User {
    id            Int         @id @default(autoincrement())
    email         String      @unique
    name          String?
    games         UserGames[]
    authoredGames Game[]      @relation("Author")
}

model Game {
    id        Int         @id @default(autoincrement())
    title     String
    createdAt DateTime    @default(now())
    updatedAt DateTime    @updatedAt
    gameState Int         @default(0)
    users     UserGames[]
    author    User?       @relation("Author", fields: [authorId], references: [id])
    authorId  Int?
}

model UserGames {
    user        User   @relation(fields: [userId], references: [id])
    userId      Int
    game        Game   @relation(fields: [gameId], references: [id])
    gameId      Int
    playerColor String

    @@id([userId, gameId, playerColor])
}
